{
  "name": "stream-pipeline",
  "version": "1.0.0",
  "description": "Stream Pipeline Monorepo for MSA",
  "private": true,
  "scripts": {
    "dev": "pnpm -r run dev",
    "build": "pnpm -r run build",
    "dev:chat": "pnpm --filter @stream-pipeline/chat-ingestor dev",
    "build:chat": "pnpm --filter @stream-pipeline/chat-ingestor build",
    "dev:media": "pnpm --filter @stream-pipeline/media-ingestor dev",
    "build:media": "pnpm --filter @stream-pipeline/media-ingestor build",
    "test": "pnpm -r run test",
    "lint": "pnpm -r run lint",
    "clean": "pnpm -r run clean"
  },
  "keywords": [
    "monorepo",
    "msa",
    "websocket",
    "stream",
    "pipeline"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.0",
    "@types/ws": "^8.5.0",
    "typescript": "^5.0.0",
    "tsx": "^4.0.0"
  }
}
